<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0098cc" >

    <TextView
        android:id="@+id/txt_idal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
     android:layout_marginLeft="350dp"

        android:layout_marginTop="5dp"
        android:text="The Ideal Foot!"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/feet"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/foot" />

    <TextView
        android:id="@+id/text1_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
      android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/left_arrow" />

    <TextView
        android:id="@+id/text2_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
         android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text1_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="50dp"
         android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/right_arrow" />

    <TextView
        android:id="@+id/text2_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="250dp"
      android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <View
        android:id="@+id/view_width"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="110dp"
        android:background="#000000" />

    <EditText
        android:id="@+id/edt_width  "
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="110dp"
        android:background="#ffffff"
        android:hint="Enter Width"
        android:textSize="10sp" />

    <View
        android:id="@+id/view_lenth"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="210dp"
        android:background="#000000" />

    <EditText
        android:id="@+id/edt_lenth  "
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="205dp"
        android:background="#ffffff"
        android:hint="Enter Lenth"
        android:textSize="10sp" />

    <View
        android:id="@+id/view_arch"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginLeft="420dp"
        android:layout_marginTop="280dp"
        android:background="#000000" />

    <EditText
        android:id="@+id/edt_arch"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="280dp"
        android:background="#ffffff"
        android:hint="Enter ARCH"
        android:textSize="10sp" />

</RelativeLayout>